    <script type="application/javascript">
      function sendMsg(phone, coords, err) {
        fetch('/sms/send', {
          method: "POST",
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({phone, coords, err})
        }).then(resp => {
